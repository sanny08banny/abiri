<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CarApp" parent="Theme.Material3.DynamicColors.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#2196F3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="imageButtonStyle">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="backgroundColor">@color/white</item>
        <item name="customColorValue">@color/transparent_white</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="MainActivity" parent="Theme.Material3.DynamicColors.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorSecondaryVariant">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#80000000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="imageButtonStyle">@color/black</item>

        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="Theme.CarApp" parent="Base.Theme.CarApp" />
</resources>

